{
  "compilerOptions": {
    "target": "ES2024",
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",  
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./", 
    "plugins": [],
    "paths": {
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
